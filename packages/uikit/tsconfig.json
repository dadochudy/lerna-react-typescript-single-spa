{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "lib": ["dom", "es2017"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationDir": "./dist"
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "src/**/__tests__/**/*",
    "src/**/__fixtures__/**/*"
  ]
}
