{
  "name": "monorepo",
  "private": true,
  "version": "independent",
  "scripts": {
    "build": "lerna run build --stream --parallel",
    "build:ui": "yarn workspace @monorepo/uikit build",
    "build:app1": "yarn workspace @monorepo/app1 build",
    "cleanup": "lerna run clean --stream --parallel",
    "lerna": "lerna-wizard",
    "lint": "eslint --ext js,ts,tsx,jsx packages",
    "release": "lerna publish",
    "start:app1": "yarn workspace @monorepo/app1 start",
    "start:app2": "yarn workspace @monorepo/app2 start",
    "start:ui": "yarn workspace @monorepo/uikit start"
  },
  "dependencies": {
    "@babel/core": "^7.6.4",
    "@babel/preset-react": "^7.6.3",
    "@babel/preset-typescript": "^7.6.0",
    "@types/node": "^12.11.7",
    "@types/styled-components": "^4.1.20",
    "babel-core": "7.0.0-bridge.0",
    "cross-env": "^6.0.3",
    "eslint": "^6.6.0",
    "eslint-config-airbnb-typescript": "^6.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-only-warn": "^1.0.1",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.2.0",
    "lerna": "^3.16.4",
    "lerna-wizard": "^1.1.1",
    "path": "^0.12.7",
    "prettier": "^1.18.2",
    "pretty-quick": "^2.0.0",
    "shx": "^0.3.2",
    "typescript": "^3.6.4"
  },
  "workspaces": [
    "packages/*"
  ],
  "license": "ISIC",
  "devDependencies": {
    "@babel/preset-env": "^7.6.3"
  }
}
